---
import { Image } from "astro:assets";

import Layout from "@/layout/Layout.astro";
import Banner from "@/components/Banner.astro";
import VideoSection from "@/components/VideoSection.astro";

import { PREICOJURIDICOS } from "@/constants/const";
import Card from "@/components/Card.astro";

import raulImage from "@/assets/images/home-header-landscape-left-raul.png";
import appStoreImage from "@/assets/images/appstore.png";
import cardUsuryImage from "@/assets/images/card-usury-testimonials.png";
import StatCard from "@/components/StatCard.astro";

const title = `Usura en Créditos | ${PREICOJURIDICOS}`;
---

<Layout title={title}>
  <div class="flex flex-col gap-6">
    <section>
      <Banner
        image={{ src: raulImage, alt: "Raul Castañeda" }}
        quoteColor="text-[#e84f1b]"
        title="USURA EN CRÉDITOS"
        subTitle="LUCHAMOS POR TÍ, GANAMOS POR TÍ"
      />
    </section>

    <section>
      <VideoSection
        quoteText="Esto es la revolución contra las injusticias"
        quoteColor="text-primary"
        videoUrl="https://www.preicojuridicos.com/assets/video/card-usury.mp4"
      />
    </section>

    <section class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <Card
          color="orange"
          title="¿A QUIÉN NOS DIRIGIMOS?"
          body="A toda aquella persona que tenga o haya tenido una tarjeta de crédito por que hay más de un 75% de probabilidad que te hayan aplicado usura, bajo nuestra experiencia"
          showIcon={true}
        />
        <Card
          color="orange"
          title="CRÉDITOS, TARJETAS, PRÉSTAMOS"
          body="Contamos con un éxito del 100% de todas las reclamaciones y procedimientos judiciales realizados logrando recuperar o exonerar el 100% de los intereses."
          showIcon={true}
        />
        <Card
          color="orange"
          title="PREGUNTAS FRECUENTES"
          body="Pulsa más abajo para conocer la respuesta a tus preguntas:"
          showIcon={true}
        />
        <Card
          color="orange"
          title="FINANCIERAS DEMANDADAS"
          body="Estos son los bancos y financieras a los que ya hemos ganado y recuperado el dinero para nuestros clientes:"
          showIcon={true}
        />
      </div>
    </section>

    <section
      class="relative w-full h-[400px] flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0 z-0">
        <Image
          src={cardUsuryImage}
          alt="Background"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>

      <div
        class="relative z-10 flex flex-col items-center text-center gap-6 px-4"
      >
        <h2
          class="text-4xl md:text-6xl font-bold text-white uppercase leading-tight drop-shadow-lg"
        >
          DESCARGA NUESTRA APP
          <br />
          GRATUITA
        </h2>

        <a
          href="https://apps.apple.com/cl/app/preico-juridicos/id1554277140"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-transform hover:scale-105"
        >
          <Image
            src={appStoreImage}
            alt="Disponible en App Store"
            class="h-16 w-auto"
          />
        </a>
      </div>
    </section>

    <section class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <StatCard value="+5.000" label="Casos ganados" />
        <StatCard value="120M €" label="Recuperados" />
        <StatCard value="100%" label="Casos ganados" />
        <StatCard value="1.900 m²" label="En instalaciones" />
      </div>
    </section>

    <!-- Caso de éxito -->
    <section></section>
  </div>
</Layout>
